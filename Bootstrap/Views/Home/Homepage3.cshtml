@model List<Message>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/AnimatedCheckboxRadiobutton.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Homepage3</title>
</head>
<body>
    <div>

        @Html.ActionLink("Homepage", "Homepage") <br />
        @Html.ActionLink("Homepage2", "Homepage2") <br />
        @Html.ActionLink("Homepage3", "Homepage3")
    </div>
    <hr />
    <div>
        <h2>Bootstrap'e uygun animasyonlu Checkbox ve Radiobutton</h2>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal">
                <div class=" form-group">
                    <label class="col-md-2 control-label">Ödenme Durumu:</label>
                    <div class="col-md-10 checkbox">
                        <label>
                            @Html.CheckBox("odendimi", false)
                            <span class="cr">
                            <i class="cr-icon glyphicon glyphicon-ok"></i>
                            </span>

                        </label>
                        <span>Ödendi mi?</span>

                    </div>
                </div>
                <div class=" form-group">
                    <label class="col-md-2 control-label">Ödenme Durumu:</label>
                    <div class="col-md-10 checkbox">
                        <label>
                            @Html.CheckBox("alindimi", false)
                            <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>

                        </label>
                        <span>Alındı mı?</span>

                    </div>
                </div>
                <div class=" form-group">
                    <label class="col-md-2 control-label">Ödenme Durumu:</label>
                    <div class="col-md-10 checkbox">
                        <label>
                            @Html.CheckBox("gonderildimi", false)
                            <span class="cr"><i class="cr-icon glyphicon glyphicon-ok"></i></span>

                        </label>
                        <span>Gönderildi mi?</span>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div>
        <h2>Home Page 3</h2>
    </div>
    <div class="container">

        @Html.Alert("alert1", "success", "Ipsum gravida vel pretium tellus tincidunt integer eu augue augue nunc elit dolor, luctus placerat scelerisque euismod, iaculis eu lacus nunc mi elit, vehicula ut.")
        <hr />
        @foreach (Message item in Model)
        {
            @Html.AlertFor(Model => item, new { title = item.Text, level = item.Level })
        }
    </div>
    <div>
        @MyHelperMethods.Input("button1", "button", "Gönder")
    </div>
    <div>
        @MyHelperMethods.Table("table1", 3, 3, "Ad", "Soyad", "Yaş")
    </div>

</body>
</html>
